@page
@model OrganizarTerritorios.Pages.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">

                        <h4 class="mb-3">Login</h4>

                        <form method="post">
                            <input asp-for="Email" class="form-control mb-2" placeholder="Email" />
                            <input asp-for="Senha" type="password" class="form-control mb-3" placeholder="Senha" />

                            <button class="btn btn-primary w-100">Entrar</button>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.Erro))
                        {
                            <div class="alert alert-danger mt-3">@Model.Erro</div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
