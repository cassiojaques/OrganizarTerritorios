@model OrganizarTerritorios.Models.Territorio
<div class="modal-header">
    <h5 class="modal-title" id="modalNovoTerritorioLabel">Editar Território</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form method="post" asp-page-handler="Edit" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">Nome:</label>
            <input name="Nome" class="form-control" value="@Model.Nome" />
        </div>
        <div class="mb-3">
            <label class="form-label">Imagem atual:</label><br />
            @if (!string.IsNullOrEmpty(Model.UrlImagem))
            {
                <img src="@Model.UrlImagem" alt="Imagem do Território" style="max-width: 100px; max-height: 100px;" class="mb-2" />
            }
            <br />
            <label class="form-label">Alterar imagem:</label>
            <input type="file" name="imagem" class="form-control" accept="image/*" />
        </div>
        <div class="mb-3">
            <label class="form-label">Total de Quadras:</label>
            <input name="QuantidadeQuadras" type="number" class="form-control" value="@Model.QuantidadeQuadras" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
</form>
